generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int           @id @default(autoincrement())
  ad_guid    String        @unique
  role_id    Int
  suivis     SuiviPeda[]
}

model Theme {
  id          Int          @id @default(autoincrement())
  nom         String
  description String?
  formations  Formation[]
}

model Formateur {
  id          Int          @id @default(autoincrement())
  ad_guid     String       @unique
  bio_courte  String?
  formations  Formation[]
}

model Formation {
  id           Int         @id @default(autoincrement())
  titre        String
  description  String?
  theme_id     Int
  theme        Theme       @relation(fields: [theme_id], references: [id])
  formateur_id Int
  formateur    Formateur   @relation(fields: [formateur_id], references: [id])
  suivis       SuiviPeda[]
}

model SuiviPeda {
  id           Int       @id @default(autoincrement())
  user_id      Int
  user         User      @relation(fields: [user_id], references: [id])
  formation_id Int
  formation    Formation @relation(fields: [formation_id], references: [id])
  statut       String    @default("en cours")
  date_maj     DateTime  @updatedAt

  @@unique([user_id, formation_id])
}